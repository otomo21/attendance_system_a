<%= form_with(model: @base, local: true)  do |f| %>

  <%= f.label :base_number %>
  <%= f.text_field :base_number, class: 'form-control' %>
  
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :attendance_type %>
  <%= f.text_field :attendance_type, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>