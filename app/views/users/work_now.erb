<% provide(:title, '出勤中社員一覧') %>

<h1>出勤中社員一覧</h1>

<table class = "table-bordered table-condensed">
  <thead>
    <tr>
      <td class="col-xs-4">社員番号</td>
      <td class="col-xs-8">名前</td>
    </tr>
  </thead>
  
  <body>
    <% @work_now.each do |work_user| %>
      <% work_user.attendances.each do |work_now| %>
        <% if work_now.started_at.present? && work_now.finished_at.blank? %>
          <tr>
            <td><%= work_user.employee_number %></td>
            <td><%= work_user.name %></td>
          </tr>
        <% end %>
      <% end %>
    <% end %>
  </body>
</table>
