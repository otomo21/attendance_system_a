<% provide(:title, 'ユーザー一覧') %>

<h1><%= @title%></h1>

<%= form_tag(users_path, :method => 'get', id:"form_search") do %>
  <p class="search_title"><%= "ユーザー名検索" %></p>
  <%= text_field_tag :search, "", {class: "search_box", placeholder: "キーワードを入力..."} %>
  <%= submit_tag '検索', :name => nil, :class => "btn btn-primary search_btn" %>
<% end %>

<%= will_paginate %>

<%= form_tag(import_users_path, :method => 'post', id:"form_import", multipart: true) do |f| %>
  <%= file_field_tag :file, {class: "btn import_btn"}%>
  <input type="reset" value="クリア", class= "btn btn-default">
  <%= submit_tag "CSVをインポート", {class: "btn btn-primary form-control"}%>
<% end %>

<p></p>

<div>
  <ul class="users">
    <%= render @users %>
  </ul>
</div>

